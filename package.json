{
  "name": "clasp-gas-webapp-demo",
  "version": "0.0.5",
  "description": "A demo project for Google Apps Script Web App using Clasp and TypeScript",
  "license": "MIT",
  "type": "module",
  "main": "src/index.ts",
  "engines": {
    "node": ">= 22"
  },
  "scripts": {
    "build": "rollup --config",
    "build:clean": "rimraf build/",
    "build:watch": "pnpm build --watch",
    "check:all": "pnpm lint --write && pnpm test",
    "clasp:create": "rimraf .clasp.json && clasp create --rootDir . --title clasp-gas-webapp-demo && pnpm lint --write .clasp.json",
    "clasp:login": "clasp login",
    "deploy": "npm run check:all && npm run build && npm run push",
    "lint": "biome check",
    "push": "clasp push",
    "test": "jest",
    "test:cov": "pnpm test --coverage",
    "test:watch": "pnpm test --watch",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/plugin-transform-runtime": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@biomejs/biome": "1.9.4",
    "@golevelup/ts-jest": "^0.7.0",
    "@google/clasp": "^2.5.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/google-apps-script": "^2.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "jest": "^30.2.0",
    "jest-extended": "^6.0.0",
    "lint-staged": "^16.2.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.52.3",
    "rollup-plugin-dotenv": "^0.5.1",
    "ts-jest": "^29.4.4",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "ultracite": "5.4.5"
  }
}
